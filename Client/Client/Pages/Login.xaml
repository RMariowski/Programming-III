<Page x:Class="Client.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="505" d:DesignWidth="855"
      Title="Login">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300" MinHeight="200">
            <Label Content="Login:" Foreground="{StaticResource StaticTextBrush}" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="tbLogin" Text="Admin"/>
            <Label Content="Password:" Foreground="{StaticResource StaticTextBrush}" FontSize="20" FontWeight="Bold"/>
            <PasswordBox Name="tbPassword" Password="admin"/>
            <Button Name="btnLogin" Content="Loguj" FontSize="18" Margin="0,10,0,0" Click="btnLogin_Click"/>
            <Button Name="btnRegister" Content="Nie masz jeszcze konta? Rejestracja." FontSize="18" Margin="0,20,0,0" Click="btnRegister_Click" />
        </StackPanel>
    </Grid>
</Page>
