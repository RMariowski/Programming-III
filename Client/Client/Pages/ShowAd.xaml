<Page x:Class="Client.ShowAd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="505" d:DesignWidth="855"
      Title="ShowAd">

    <Grid>
        <DockPanel HorizontalAlignment="Center" Margin="0,0,0,5">
            <Border CornerRadius="3" BorderBrush="Gray" BorderThickness="1" DockPanel.Dock="Top">
                <StackPanel MinWidth="600" MinHeight="200">
                    <Label Name="lblTitle" Content="Tytuł" Foreground="{StaticResource StaticTextBrush}" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>
                    <Label Name="lblAuthorAndCreateDate" Content="Dodano XX/XX/XXXX przez YYYYYY" Foreground="{StaticResource StaticTextBrush}" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                    <TextBox Name="tbDescription" Text="Treść" Height="425" Background="Transparent" Foreground="{StaticResource StaticTextBrush}" BorderBrush="Gray" FontSize="14" FontWeight="Bold" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" IsHitTestVisible="False" Margin="5,0,5,0"/>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Page>
