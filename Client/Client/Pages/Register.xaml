<Page x:Class="Client.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="505" d:DesignWidth="855"
      Title="Register">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300" MinHeight="200">
            <Label Content="Login:" Foreground="{StaticResource StaticTextBrush}" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="tbLogin" Text=""/>
            <Label Content="Password:" Foreground="{StaticResource StaticTextBrush}" FontSize="20" FontWeight="Bold"/>
            <PasswordBox Name="tbPassword" Password=""/>
            <Label Content="E-mail:" Foreground="{StaticResource StaticTextBrush}" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="tbEmail"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Name="btnRegister" Content="Rejestruj" FontSize="18" Margin="20,0,35,0" Click="btnRegister_Click"/>
                <Button Name="btnBack" Content="Cofnij" FontSize="18" HorizontalAlignment="Right" Margin="35,0,20,0" Click="btnBack_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
